{
	"latex-workshop.latex.outDir": "%WORKSPACE_FOLDER%/build",
	"latex-workshop.latex.tools": [
		{
			"name": "latexmk",
			"command": "latexmk",
			"args": [
				"-synctex=1",
				"-interaction=nonstopmode",
				"-file-line-error",
				"-pdf",
				"-outdir=%OUTDIR%",
				"%DOC%",
				"-f"
			]
		},
		{
			"name": "lualatex",
			"command": "lualatex",
			"args": [
				"-synctex=1",
				"-interaction=nonstopmode",
				"-file-line-error",
				"-output-directory=%OUTDIR%",
				"%DOC%"
			]
		},
		{
			"name": "bibtex",
			"command": "bibtex",
			"args": ["%DOCFILE%"]
		}
	],
	"latex-workshop.latex.recipes": [
		{
			"name": "latexmk",
			"tools": ["latexmk"]
		},
		{
			"name": "lualatex",
			"tools": ["lualatex"]
		}
	]
}
